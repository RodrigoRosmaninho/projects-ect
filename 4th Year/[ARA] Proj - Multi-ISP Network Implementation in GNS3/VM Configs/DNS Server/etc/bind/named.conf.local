//include "/etc/bind/zones.rfc1918";

view "north" {
 match-clients { Arasaka_North; };
 recursion no;
 zone "burn-city.org" {
  type master;
  file "/etc/bind/burn-city.org-north.db";
 };
};

view "south" {
 match-clients { any; };
 recursion no;
 zone "burn-city.org" {
  type master;
  file "/etc/bind/burn-city.org-south.db";
 };
};

