<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GLUA_DB"
      xmlns:Custom="http://metro.mahapps.com/winfx/xaml/iconpacks" x:Class="GLUA_DB.Topico"
      mc:Ignorable="d" 
      Height="Auto" Width="Auto"
      Title="Topico">

    <Grid>

        <Button HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="24" Height="24" Click="Button_Click" Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}">
            <Custom:PackIconModern Width="14"
                Height="14"
                Kind="ArrowLeft" />
        </Button>
        <TextBox x:Name="Nome_TextBox" HorizontalAlignment="Left" Height="23" Margin="56,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="300" IsReadOnly="True"/>
        <Label Content="Nome" HorizontalAlignment="Left" Margin="56,124,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.785,-3.003"/>
        <Button x:Name="Edit" Content="Editar" HorizontalAlignment="Left" Margin="597,23,0,0" VerticalAlignment="Top" Width="52" Click="Edit_Click"/>
        <Button x:Name="Delete" Content="Apagar" HorizontalAlignment="Left" Margin="699,23,0,0" VerticalAlignment="Top" Width="55" Click="Delete_Click" />
        <Button x:Name="Save" Content="Guardar" HorizontalAlignment="Left" Margin="597,23,0,0" VerticalAlignment="Top" Width="63" Click="Save_Click"  Visibility="Hidden"/>
        <Button x:Name="Cancel" Content="Cancelar" HorizontalAlignment="Left" Margin="690,23,0,0" VerticalAlignment="Top" Width="64" Click="Cancel_Click"  Visibility="Hidden" />
        <TextBox x:Name="NProblemas_TextBox" HorizontalAlignment="Left" Height="23" Margin="430,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="139" IsReadOnly="True"/>
        <Label Content="Nº Problemas" HorizontalAlignment="Left" Margin="430,124,0,0" VerticalAlignment="Top"/>
        <Button x:Name="VerProblemas" Content="Ver Problemas" HorizontalAlignment="Left" Margin="628,150,0,0" VerticalAlignment="Top" Width="98" RenderTransformOrigin="1.796,0.559" Click="VerProblemas_Click"/>

    </Grid>
</Page>
