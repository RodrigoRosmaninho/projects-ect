<Page x:Class="GLUA_DB.Componentes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GLUA_DB"
      mc:Ignorable="d" 
      Height="Auto" Width="Auto"
      Title="Componentes">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Name="ComponentesDataGrid" HorizontalAlignment="Left" Height="590"  VerticalAlignment="Top" Width="Auto" MouseDoubleClick="Row_DoubleClick" IsReadOnly="True"/>
        <Button x:Name="InsertComponente" Content="Adicionar um Novo Componente" HorizontalAlignment="Left" Margin="20,0,0,-9" VerticalAlignment="Top" Width="210"  Grid.Row="2" Click="InsertComponente_Click"/>
    </Grid>
</Page>
