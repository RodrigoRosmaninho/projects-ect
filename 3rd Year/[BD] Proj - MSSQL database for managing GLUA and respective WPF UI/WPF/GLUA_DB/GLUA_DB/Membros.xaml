<Page x:Class="GLUA_DB.Membros"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GLUA_DB"
      mc:Ignorable="d" 
      Height="Auto" Width="Auto"
      Title="Membros">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DataGrid Name="MembrosDataGrid" HorizontalAlignment="Left" Height="590"  VerticalAlignment="Top" Width="Auto" MouseDoubleClick="Row_DoubleClick" IsReadOnly="True"/>
        <Button x:Name="InsertMembro" Content="Adicionar um Novo Membro" HorizontalAlignment="Left" Margin="20,0,0,-9" VerticalAlignment="Top" Width="190"  Click="InsertMembro_Click" Grid.Row="2"/>
    </Grid>

</Page>
